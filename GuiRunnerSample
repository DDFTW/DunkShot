import java.awt.Dimension;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.sql.Time;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.Timer;

public class GuiRunner {

	public static void main(String[] args) {
		JFrame f = new JFrame("Oof");
		f.setResizable(false);
		f.setSize(800,800);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setLocationRelativeTo(null);
		
		JPanel p = new JPanel();
		
		DC canvas = new DC();
		canvas.setPreferredSize(new Dimension(780,770));
		JLabel l = new JLabel("Score " + canvas.getX());
		
		
		
		class CanvasListener implements MouseListener {
			public void mouseClicked(MouseEvent arg0) {
			}
			public void mouseEntered(MouseEvent arg0) {
			}
			public void mouseExited(MouseEvent arg0) {
			}
			public void mouseReleased(MouseEvent arg0) {
			}

			public void mousePressed(MouseEvent arg0) {
				int x = arg0.getX();
				int y = arg0.getY();
				System.out.println(x + ", " + y);
				if(canvas.checkClick(x,y)) {
					canvas.incrementScore();
				}
				l.setText("Score " + canvas.getScore());
			}

			
		}
	
		//when you add a drawing component to a panel, you must set the size.
	
		canvas.addMouseListener(new CanvasListener());
		p.add(l);
		p.add(canvas);
		
		
		//timer stuff
		
		class TimerListener implements ActionListener{
			public void actionPerformed(ActionEvent arg0) {
				canvas.repaintScreen();	
				System.out.println("wow");			
			}
		}
		double start = System.nanoTime();
		while(start - System.nanoTime() < 10 * Math.pow(10, 9)) {
			Timer annoyer = new Timer(800, new TimerListener());
			annoyer.start();
		}
		
		
		
		
		
		
		f.add(p);
		f.setVisible(true);
	}
	
	
}
